{# traefik.yml.j2: Jinja2 Template for Default Traefik Reverse Proxy #}

global:
  checkNewVersion: false
  sendAnonymousUsage: false

log:
  level: "INFO"

entryPoints:
  web:
    address: :80
  mqtt:
    address: :1883

providers:
  file:
    directory: /etc/traefik/configurations/
    watch: true